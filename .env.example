# Configuration Proxmox
PROXMOX_API_URL=https://proxmox-server.local:8006/api2/json
PROXMOX_API_TOKEN_ID=terraform@pve!terraform-token
PROXMOX_API_TOKEN_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PROXMOX_NODE=pve
PROXMOX_STORAGE=local-lvm
PROXMOX_ISO_STORAGE=local
PROXMOX_BRIDGE=vmbr0

# Configuration Flask
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Base de données
DATABASE_PATH=./data/deployments.db

# Configuration réseau
NETWORK_POOL_START=192.168.1.100
NETWORK_POOL_END=192.168.1.200
NETWORK_GATEWAY=192.168.1.1
NETWORK_NETMASK=24
DNS_SERVERS=8.8.8.8,8.8.4.4

# Configuration Terraform
TERRAFORM_WORK_DIR=./terraform/workspaces
TERRAFORM_STATE_DIR=./terraform/states

# Logs
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Limites de ressources
MAX_CPU_CORES=8
MAX_MEMORY_MB=16384
MAX_DISK_GB=500

# Timeout (en secondes)
DEPLOYMENT_TIMEOUT=1800
VM_START_TIMEOUT=300
